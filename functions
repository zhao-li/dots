function work_on {
  cd /path/to/src &&
  fig up &
  docker run -it -d -p 8181:8181 --name ide -v /path/to/src:/workspace/ kdelfour/cloud9-docker &&
  xdg-open http://0.0.0.0:8181 &
  until [ "$CONTAINER_UP" -eq 0 ]
    do
      sleep 1
      cd /path/to/src && fig port web 3000
      CONTAINER_UP=$?
    done
  xdg-open http://$(fig port web 3000) &
}

function stop_working {
  cd /path/to/src && fig stop
  docker stop ide
  docker rm ide
}
